<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_back"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:elegantTextHeight="true"
        android:elevation="300dp"
        android:fontFamily="@font/bungee_inline"
        android:includeFontPadding="false"
        android:paddingStart="20dp"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textIsSelectable="false"
        android:textSize="14sp"
        android:textStyle="bold"
        app:autoSizeTextType="uniform" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:padding="5dp">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:elevation="300dp"
            android:scaleType="centerInside"
            android:src="@drawable/gif_cmp" />

        <ImageButton
            android:id="@+id/compressButton"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:backgroundTint="#E4FFFFFF"
            android:contentDescription="@string/compressbutton"
            android:elevation="300dp"
            android:hapticFeedbackEnabled="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/compress"
            tools:ignore="SpeakableTextPresentCheck" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:padding="5dp">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:backgroundTint="#D58C8585"
            android:elevation="300dp"
            android:scaleType="centerInside"
            android:src="@drawable/gif_crop" />

        <ImageButton
            android:id="@+id/cropButton"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:backgroundTint="#9FEBBB"
            android:contentDescription="@string/cropbutton"
            android:elevation="300dp"
            android:hapticFeedbackEnabled="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/crop1"
            tools:ignore="SpeakableTextPresentCheck" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:layout_weight="1"
        android:background="@drawable/rounded_corner"
        android:padding="5dp">

        <pl.droidsonroids.gif.GifImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:elevation="300dp"
            android:scaleType="centerInside"
            android:src="@drawable/gif_about" />

        <ImageButton
            android:id="@+id/setting_btn"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@drawable/custom_button"
            android:backgroundTint="#363636"
            android:contentDescription="@string/ibutton"
            android:elevation="300dp"
            android:hapticFeedbackEnabled="true"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/isetting1"
            tools:ignore="SpeakableTextPresentCheck" />
    </TableRow>

</LinearLayout>